{% comment %}
  Figma Banner Section - Custom built from scratch
  All text fields are editable via theme customizer
{% endcomment %}

{{ 'figma-banner.css' | asset_url | stylesheet_tag }}

<section class="figma-banner">
  <div class="heading" role="banner">
    <button class="menu-icon" type="button" aria-label="Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <div class="logo" aria-label="Logo">
      {%- if section.settings.logo_image != blank -%}
        {{ section.settings.logo_image
          | image_url: width: 400
          | image_tag:
            loading: 'lazy',
            alt: section.settings.brand_text,
            class: 'logo__image'
        }}
      {%- elsif section.settings.brand_text != blank -%}
        <span class="logo__text">{{ section.settings.brand_text }}</span>
      {%- endif -%}
    </div>

    {%- if section.settings.tagline_text != blank -%}
      <div class="tagline">{{ section.settings.tagline_text }}</div>
    {%- endif -%}

    {%- if section.settings.top_button_label != blank -%}
      <a class="gift-button" href="{{ section.settings.top_button_link }}">
        <span>{{ section.settings.top_button_label }}</span>
        <svg width="24" height="12" viewBox="0 0 24 12" fill="none" aria-hidden="true" focusable="false">
          <path d="M1 6H23M18 1L23 6L18 11" stroke="currentColor" stroke-width="1.5" />
        </svg>
      </a>
    {%- endif -%}
  </div>

  {%- if section.settings.top_image != blank -%}
    <div class="hero-banner">
      {{ section.settings.top_image | image_url: width: 2000 | image_tag: loading: 'lazy', alt: section.settings.heading }}
    </div>
  {%- endif -%}

  <div class="gift-guide">
    <div class="text-container">
      {%- if section.settings.heading != blank -%}
        <h1>{{ section.settings.heading }}</h1>
      {%- endif -%}
      {%- if section.settings.description != blank -%}
        <p>{{ section.settings.description }}</p>
      {%- endif -%}
      {%- if section.settings.cta_label != blank -%}
        <a class="shop-now-button" href="{{ section.settings.cta_link }}">
          <span>{{ section.settings.cta_label }}</span>
          <svg width="24" height="12" viewBox="0 0 24 12" fill="none" aria-hidden="true" focusable="false">
            <path d="M1 6H23M18 1L23 6L18 11" stroke="currentColor" stroke-width="1.5" />
          </svg>
        </a>
      {%- endif -%}
    </div>

    {%- if section.settings.right_image != blank -%}
      <div class="img-cont">
        {{ section.settings.right_image | image_url: width: 1400 | image_tag: loading: 'lazy', alt: section.settings.heading }}
      </div>
    {%- endif -%}
  </div>

  {%- if section.settings.bottom_text != blank -%}
    <section class="sustainability-banner" style="--tisso-bottom-bg: {{ section.settings.bottom_bar_bg }}; --tisso-bottom-color: {{ section.settings.bottom_bar_color }};">
      <p>{{ section.settings.bottom_text }}</p>
    </section>
  {%- endif -%}
</section>

{% schema %}
{
  "name": "Figma Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo_image",
      "label": "Logo image (navbar)"
    },
    {
      "type": "text",
      "id": "brand_text",
      "label": "Brand text (top left)",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "tagline_text",
      "label": "Tagline text (top center)",
      "default": "Find the ideal gift for your loved one."
    },
    {
      "type": "text",
      "id": "top_button_label",
      "label": "Top button label",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "top_button_link",
      "label": "Top button link"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover joy: your ultimate holiday gift destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Call-to-action button label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Call-to-action button link"
    },
    {
      "type": "image_picker",
      "id": "top_image",
      "label": "Top full-width image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right side image"
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom announcement text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    },
    {
      "type": "color",
      "id": "bottom_bar_bg",
      "label": "Bottom bar background",
      "default": "#F5F5F5"
    },
    {
      "type": "color",
      "id": "bottom_bar_color",
      "label": "Bottom bar text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Figma Banner"
    }
  ]
}
{% endschema %}
