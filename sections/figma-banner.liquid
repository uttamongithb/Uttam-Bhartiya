{% comment %}
  Figma Banner Section - Custom built from scratch
  All text fields are editable via theme customizer
{% endcomment %}

{{ 'figma-banner.css' | asset_url | stylesheet_tag }}

<section class="figma-banner">
  {%- if section.settings.brand_text != blank or section.settings.tagline_text != blank -%}
    <div class="figma-banner__top">
      {%- if section.settings.brand_text != blank -%}
        <span class="figma-banner__brand">{{ section.settings.brand_text }}</span>
      {%- endif -%}
      {%- if section.settings.tagline_text != blank -%}
        <span class="figma-banner__tagline">{{ section.settings.tagline_text }}</span>
      {%- endif -%}
      {%- if section.settings.top_button_label != blank -%}
        <a class="figma-banner__top-btn" href="{{ section.settings.top_button_link }}">
          {{- section.settings.top_button_label -}}
        </a>
      {%- endif -%}
    </div>
  {%- endif -%}

  <div class="figma-banner__content">
    {%- if section.settings.top_image != blank -%}
      <div class="figma-banner__media figma-banner__media--top">
        {{ section.settings.top_image | image_url: width: 1440 | image_tag: loading: 'lazy', class: 'figma-banner__image', alt: section.settings.heading }}
      </div>
    {%- endif -%}

    <div class="figma-banner__bottom-section">
      <div class="figma-banner__text">
        {%- if section.settings.heading != blank -%}
          <h1 class="figma-banner__heading">{{ section.settings.heading }}</h1>
        {%- endif -%}
        {%- if section.settings.description != blank -%}
          <p class="figma-banner__description">{{ section.settings.description }}</p>
        {%- endif -%}
        {%- if section.settings.cta_label != blank -%}
          <a class="figma-banner__cta" href="{{ section.settings.cta_link }}">
            {{- section.settings.cta_label -}}
          </a>
        {%- endif -%}
      </div>

      {%- if section.settings.right_image != blank -%}
        <div class="figma-banner__media figma-banner__media--right">
          {{ section.settings.right_image | image_url: width: 890 | image_tag: loading: 'lazy', class: 'figma-banner__image', alt: section.settings.heading }}
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- if section.settings.bottom_text != blank -%}
    <div class="figma-banner__bottom-bar">
      {{ section.settings.bottom_text }}
    </div>
  {%- endif -%}
</section>

{% schema %}
{
  "name": "Figma Banner",
  "settings": [
    {
      "type": "text",
      "id": "brand_text",
      "label": "Brand text (top left)",
      "default": "TISSO VISION"
    },
    {
      "type": "text",
      "id": "tagline_text",
      "label": "Tagline text (top center)",
      "default": "Find the ideal gift for your loved one."
    },
    {
      "type": "text",
      "id": "top_button_label",
      "label": "Top button label",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "top_button_link",
      "label": "Top button link"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Main heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Discover joy: your ultimate holiday gift destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "cta_label",
      "label": "Call-to-action button label",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Call-to-action button link"
    },
    {
      "type": "image_picker",
      "id": "top_image",
      "label": "Top full-width image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right side image"
    },
    {
      "type": "text",
      "id": "bottom_text",
      "label": "Bottom announcement text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES IN SIZES XXS TO 6XL"
    }
  ],
  "presets": [
    {
      "name": "Figma Banner"
    }
  ]
}
{% endschema %}
